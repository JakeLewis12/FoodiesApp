<Window x:Class="FoodiesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:FoodiesApp.MVVM.ViewModel"
        xmlns:local="clr-namespace:FoodiesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="RoyalBlue" Offset="0.0"/>
                <GradientStop Color="Aqua" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
           

            <TextBlock Text="Foodie"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="AliceBlue"
                   FontSize="22" Margin="34,0,0,0">

            </TextBlock>


            <StackPanel Grid.Row="1">


                <RadioButton Content="Home"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"  
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"
                             FontFamily="Fonts\Poppins-Regular.ttf"
                             Click="RadioButton_Click"
                             />
                <RadioButton Content="Featured"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding DiscoveryViewCommand}"
                             FontFamily="Fonts\Poppins-Regular.ttf"
                             Click="RadioButton_Click_1"
                             />
                <RadioButton Content="Recipies"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="Fonts\Poppins-Regular.ttf"
                             Click="RadioButton_Click_2"
                             />
                <RadioButton Content="My Account"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="Fonts\Poppins-Regular.ttf"
                             Click="RadioButton_Click_3"
                             />
                <RadioButton Content="About"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             FontFamily="Fonts\Poppins-Regular.ttf"
                             Click="RadioButton_Click_4"
                             />

            </StackPanel>


            <TextBox Width="250"
                       Height="40"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="460,0,0,0"
                       Grid.Column="1"
                       FontFamily="Fonts\Poppins-Regular.ttf"
                       Style="{StaticResource SearchBar}"/>
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
